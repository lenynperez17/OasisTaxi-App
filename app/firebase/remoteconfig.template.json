  "conditions": [
    {
      "name": "production_environment",
      "expression": "app.id == 'com.oasistaxiperu.app'",
      "tagColor": "GREEN"
    },
    {
      "name": "development_environment", 
      "expression": "app.id == 'com.oasistaxiperu.app.dev'",
      "tagColor": "ORANGE"
    },
    {
      "name": "android_platform",
      "expression": "device.os == 'android'",
      "tagColor": "BLUE"
    },
    {
      "name": "ios_platform",
      "expression": "device.os == 'ios'",
      "tagColor": "BLUE"
    },
    {
      "name": "web_platform",
      "expression": "device.os == 'web'",
      "tagColor": "PURPLE"
    },
    {
      "name": "lima_region",
      "expression": "device.country == 'PE' && user.customAttributes['city'] == 'Lima'",
      "tagColor": "CYAN"
    },
    {
      "name": "arequipa_region",
      "expression": "device.country == 'PE' && user.customAttributes['city'] == 'Arequipa'",
      "tagColor": "CYAN"
    },
    {
      "name": "driver_user_type",
      "expression": "user.customAttributes['userType'] == 'driver'",
      "tagColor": "YELLOW"
    },
    {
      "name": "passenger_user_type",
      "expression": "user.customAttributes['userType'] == 'passenger'",
      "tagColor": "PINK"
    },
    {
      "name": "admin_user_type",
      "expression": "user.customAttributes['userType'] == 'admin'",
      "tagColor": "RED"
    }
  ],
