    "moment-timezone": "^0.5.44",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "sharp": "^0.33.2",
    "crypto": "^1.0.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
