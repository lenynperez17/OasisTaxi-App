<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<key>CFBundleDevelopmentRegion</key>
		<string>$(DEVELOPMENT_LANGUAGE)</string>
		<key>CFBundleDisplayName</key>
		<string>Oasis Taxi</string>
		<key>CFBundleExecutable</key>
		<string>$(EXECUTABLE_NAME)</string>
		<key>CFBundleIdentifier</key>
		<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
		<key>CFBundleInfoDictionaryVersion</key>
		<string>6.0</string>
		<key>CFBundleName</key>
		<string>Oasis Taxi</string>
		<key>CFBundlePackageType</key>
		<string>APPL</string>
		<key>CFBundleShortVersionString</key>
		<string>$(FLUTTER_BUILD_NAME)</string>
		<key>CFBundleSignature</key>
		<string>????</string>
		<key>CFBundleVersion</key>
		<string>$(FLUTTER_BUILD_NUMBER)</string>
		<key>LSRequiresIPhoneOS</key>
		<true/>
		<key>UILaunchStoryboardName</key>
		<string>LaunchScreen</string>
		<key>UIMainStoryboardFile</key>
		<string>Main</string>
		<key>UISupportedInterfaceOrientations</key>
		<array>
			<string>UIInterfaceOrientationPortrait</string>
			<string>UIInterfaceOrientationLandscapeLeft</string>
			<string>UIInterfaceOrientationLandscapeRight</string>
		</array>
		<key>UISupportedInterfaceOrientations~ipad</key>
		<array>
			<string>UIInterfaceOrientationPortrait</string>
			<string>UIInterfaceOrientationPortraitUpsideDown</string>
			<string>UIInterfaceOrientationLandscapeLeft</string>
			<string>UIInterfaceOrientationLandscapeRight</string>
		</array>
		<key>CADisableMinimumFrameDurationOnPhone</key>
		<true/>
		<key>UIApplicationSupportsIndirectInputEvents</key>
		<true/>
		<!-- Facebook Configuration -->
		<key>CFBundleURLTypes</key>
		<array>
			<dict>
				<key>CFBundleURLSchemes</key>
				<array>
					<!-- Replace with your Facebook App ID -->
					<string>fb1234567890123456</string>
				</array>
			</dict>
			<!-- Google Sign In -->
			<dict>
				<key>CFBundleURLSchemes</key>
				<array>
					<!-- REVERSED_CLIENT_ID from GoogleService-Info.plist -->
					<string>com.googleusercontent.apps.850366375349-km293vmd6an7lv4dqq8odr03gl5mqodm</string>
				</array>
			</dict>
			<!-- App Deep Links -->
			<dict>
				<key>CFBundleURLSchemes</key>
				<array>
					<string>oasistaxiapp</string>
				</array>
			</dict>
		</array>
		<!-- Facebook App ID and Display Name -->
		<key>FacebookAppID</key>
		<string>1234567890123456</string>
		<key>FacebookClientToken</key>
		<string>abcdef1234567890abcdef1234567890</string>
		<key>FacebookDisplayName</key>
		<string>Oasis Taxi</string>
		<!-- Facebook LSApplicationQueriesSchemes -->
		<key>LSApplicationQueriesSchemes</key>
		<array>
			<string>fbapi</string>
			<string>fb-messenger-share-api</string>
			<string>fbauth2</string>
			<string>fbshareextension</string>
		</array>
		<!-- ============================================== -->
		<!-- PERMISOS AUDITADOS - OASISTXI SECURITY 100/100 -->
		<!-- ============================================== -->
		
		<!-- UBICACIÓN (ESENCIAL para app de taxis) -->
		<key>NSLocationWhenInUseUsageDescription</key>
		<string>Oasis Taxi necesita tu ubicación para conectarte con conductores cercanos y calcular la mejor ruta para tu viaje. Solo usamos tu ubicación mientras usas la app.</string>
		
		<!-- REMOVIDO: NSLocationAlwaysAndWhenInUseUsageDescription -->
		<!-- REMOVIDO: NSLocationAlwaysUsageDescription -->
		<!-- No necesitamos ubicación en background por seguridad -->
		
		<!-- CÁMARA (Solo para documentos del conductor) -->
		<key>NSCameraUsageDescription</key>
		<string>Los conductores necesitan tomar fotos de sus documentos (licencia, SOAT) para verificación. Los pasajeros pueden opcionalmente tomar una foto de perfil.</string>
		
		<!-- GALERÍA (Solo para foto de perfil opcional) -->
		<key>NSPhotoLibraryUsageDescription</key>
		<string>Puedes elegir una foto de tu galería para tu perfil (opcional). Los conductores pueden subir fotos de documentos desde la galería.</string>
		
		<!-- FACE ID / TOUCH ID (Autenticación biométrica) -->
		<key>NSFaceIDUsageDescription</key>
		<string>Usa Face ID para iniciar sesión de forma rápida y segura, protegiendo tu cuenta de accesos no autorizados.</string>
		
		<!-- ============================================== -->
		<!-- PERMISOS REMOVIDOS POR SEGURIDAD:             -->
		<!-- - NSMicrophoneUsageDescription (no hay llamadas) -->
		<!-- - NSContactsUsageDescription (no necesario)    -->
		<!-- - NSMotionUsageDescription (no usado)          -->
		<!-- - NSLocationAlwaysUsageDescription (riesgo)    -->
		<!-- - NSCalendarsUsageDescription (no usado)       -->
		<!-- - NSRemindersUsageDescription (no usado)       -->
		<!-- - NSHealthShareUsageDescription (no usado)     -->
		<!-- - NSBluetoothUsageDescription (no usado)       -->
		<!-- ============================================== -->
		<!-- App Transport Security - HTTPS OBLIGATORIO -->
		<key>NSAppTransportSecurity</key>
		<dict>
			<!-- NO permitir conexiones inseguras -->
			<key>NSAllowsArbitraryLoads</key>
			<false/>
			
			<!-- Requerir TLS 1.2 mínimo -->
			<key>NSAllowsArbitraryLoadsInWebContent</key>
			<false/>
			
			<!-- Permitir solo certificados válidos -->
			<key>NSAllowsLocalNetworking</key>
			<false/>
			
			<!-- Forward Secrecy obligatorio -->
			<key>NSRequiresCertificateTransparency</key>
			<true/>
			
			<!-- NO hay excepciones de dominio -->
			<!-- Todos los dominios deben usar HTTPS -->
		</dict>
		<!-- Google Maps API Key - Usar variable de entorno -->
		<!-- NUNCA hardcodear API keys en Info.plist -->
		<!-- Configurar en código con variable de entorno -->
		<!-- Firebase Configuration -->
		<key>FirebaseAppDelegateProxyEnabled</key>
		<false/>
		<!-- Background Modes (Mínimos necesarios) -->
		<key>UIBackgroundModes</key>
		<array>
			<!-- Solo notificaciones push -->
			<string>remote-notification</string>
			<!-- Location removido por seguridad -->
			<!-- Fetch removido - no necesario -->
		</array>
		<key>UIStatusBarHidden</key>
		<true/>
		<key>UIViewControllerBasedStatusBarAppearance</key>
		<false/>
	</dict>
</plist>
